<% if flash[:correct_review] %>
  <div class="alert alert-success" role="alert">
    Правильно!
  </div>
<% elsif word = flash[:correct_answer] %>
  <div class="alert alert-danger" role="alert">
    Неверно! Правильный ответ: <%= word %>
  </div>
<% end %>

<% if @review %>
  <div class="panel panel-primary">
    <div class="panel-heading">Пересмотр сегодня</div>
    <div class="panel-body">
      <p> <%= @review.translated_text %> </p>
      <%= form_tag('/reviews', method: :post) do %>
        <%= hidden_field_tag('card_id', @review[:id]) %>
        <%= label_tag(:user_translation, 'Введите оригинальное слово', class: 'label label-default')  %>
        <%= text_field_tag(:user_translation, nil, class: 'form-control') %>
        <%= submit_tag('Следущее слово', class: 'btn btn-default') %>
      <% end %>
    </div>
  </div>
<% end %>
