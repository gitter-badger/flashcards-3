<div class="panel panel-primary">
  <div class="panel-heading">Авторизация</div>
  <div class="panel-body">
    <%= form_tag user_sessions_path, :method => :post do |f| %>
      <%= label_tag(:email, 'Email', class: 'label label-default') %>
      <%= email_field_tag(:email, nil, class: 'form-control') %>
      <%= label_tag(:password, 'Пароль', class: 'label label-default') %>
      <%= password_field_tag(:password, nil, class: 'form-control') %>
      <%= submit_tag('Войти', class: 'btn btn-default') %>
    <% end %>

    <%= link_to 'Назад', user_sessions_path %>
  </div>
</div>
